{% comment %}
  Variables:
  - src: String-Url
  - custom_class: String
  - width: String-Url
  - heigt: String
  - alt: String

  Use:
  {% render 'render-image'
    src: "image_url"
    custom_class: "img"
    alt: "Product image"
    width: "100"
    height: "100"
  %} 
{% endcomment %}

{% liquid
  if src != blank
    assign img_src = src
  else
    assign img_src = "https://cdn.shopify.com/s/files/1/0797/9184/9790/files/placeholder.png?v=1690519838" 
  endif
%}

<img
  class="{{ custom_class }}"
  loading="lazy"
  src="{{ img_src }}" 
  alt=""
  width="{{ width }}"
  height="{{ height }}"
  alt="{{ alt | default: "placeholder image" }}"
>