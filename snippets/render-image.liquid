{% comment %}
  Variables:
  - src: String-Url
  - custom_class: String
  - width: String-Url
  - heigt: String
  - alt: String

  Use:
  {% render 'render-image'
    src: "image_url"
    custom_class: "img"
    alt: "Product image"
    width: "100"
    height: "100"
  %}
{% endcomment %}

{% if src != blank %}
  {% if lazy == true %}
    {{
      src
      | image_url: width: src.width
      | image_tag: widths: '200, 300, 400, 500, 800, 1000, 2000', class: custom_class, alt: src.alt, loading: 'lazy'
    }}
  {% else %}
    {{
      src
      | image_url: width: src.width
      | image_tag: widths: '200, 300, 400, 500, 800, 1000, 2000', class: custom_class, alt: src.alt, loading: 'eager'
    }}
  {% endif %}
{% else %}
  <img
    src="https://cdn.shopify.com/s/files/1/0797/9184/9790/files/placeholder.png?v=1690519838"
    alt="placeholder-image"
    width="2000"
    height="auto"
    loading="eager"
  >
{% endif %}
